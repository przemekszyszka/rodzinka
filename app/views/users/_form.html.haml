= semantic_form_for @user do |f|
  = f.inputs do
    = f.input :email
    = f.input :password
    = f.input :password_confirmation
    = f.input :first_name
    = f.input :last_name
    = f.input :gender
    = f.input :birth_date
    = f.input :description


  = f.actions do
    = f.action :submit, :as => :input
