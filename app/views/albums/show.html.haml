- model_class = Album
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @album.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @album.description
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @album.user_id
%p
  %strong= model_class.human_attribute_name(:visibility) + ':'
  %br
  = @album.visibility

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), user_albums_path(@user), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_user_album_path(current_user, @album), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), user_album_path(current_user, @album), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
  = link_to "Dodaj zdjÄ™cie", new_user_album_photo_url(current_user, @album), :class => 'btn btn-primary'